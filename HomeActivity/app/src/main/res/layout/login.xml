<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text=" Inserisci le tue credenziali"
        android:background="#ffffff"
        android:textColor="#1d8ca6"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:background="#1d8ca6"
        android:text=" Username:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#e3f2f6"
        android:singleLine="true"
        android:backgroundTint="#e3f2f6"
        android:textSize="20dp"
        android:hint=" Inserisci Username" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#1d8ca6"
        android:text=" Password:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#e3f2f6"
        android:backgroundTint="#e3f2f6"
        android:singleLine="true"
        android:password="true"
        android:hint=" Inserisci Password" />

    <CheckBox
        android:id="@+id/cbCheckBox_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:buttonTint="#1d8ca6"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="Ricordami"
        android:textColor="#1d8ca6"/>

    <TextView
        android:id="@+id/tvErroreUsernameOrPassword_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textColor="#FFFF0000" />

    <ProgressBar
        android:id="@+id/pbLogin"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:indeterminate="true"
        android:visibility="invisible" />


    <Button
        android:id="@+id/bttOkLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:text="ACCEDI" />


    <ImageButton
        android:id="@+id/bttBackLogin_to_LoginSignin"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="160dp"
        android:backgroundTint="#ffffff"
        android:scaleType="fitCenter"
        android:src="@drawable/backbtt"
        android:tint="#1d8ca6"
        android:visibility="visible" />


</LinearLayout>