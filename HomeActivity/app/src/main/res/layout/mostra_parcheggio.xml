<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MostraParcheggio">

    <fragment
        android:layout_width="345dp"
        android:layout_height="240dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvParcheggioMostraParcheggio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:textColor="#1186a1"
        android:textSize="23dp"
        />


    <Button
        android:id="@+id/btTornaAHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Torna alla home"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#0b839f"
        />

    <Button
        android:id="@+id/bttEliminaParcheggio_MostraParcheggio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Elimina Parcheggio"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#0b839f"/>


</LinearLayout>

